{
  "name": "vscode-keep-sorted",
  "private": true,
  "displayName": "Keep Sorted",
  "description": "VS Code extension to automatically keep code blocks sorted",
  "version": "0.0.2",
  "publisher": "awalsh128",
  "author": {
    "name": "awalsh128"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/awalsh128/vscode-keep-sorted#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/awalsh128/vscode-keep-sorted"
  },
  "bugs": {
    "url": "https://github.com/awalsh128/vscode-keep-sorted/issues"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "keywords": [
    "sort",
    "organize",
    "format",
    "code",
    "auto-sort",
    "keep-sorted"
  ],
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Keep Sorted",
      "properties": {
        "keep-sorted.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the keep-sorted extension"
        },
        "keep-sorted.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically lint documents when they are saved"
        },
        "keep-sorted.lintOnChange": {
          "type": "boolean",
          "default": true,
          "description": "Automatically lint documents when they are changed (debounced)"
        },
        "keep-sorted.logLevel": {
          "type": "string",
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logging level for the extension output channel"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint",
    "watch": "tsc -watch -p ./",
    "create-binaries": "tsx scripts/create-binaries.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/vscode": "^1.100.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.0",
    "eslint": "^9.13.0",
    "mocha": "^11.7.4",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  }
}
