{
  "name": "keep-sorted",
  "private": true,
  "displayName": "Keep Sorted",
  "description": "VS Code extension to automatically keep code blocks sorted",
  "version": "0.0.1",
  "publisher": "awalsh128",
  "author": {
    "name": "awalsh128"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/awalsh128/vscode-keep-sorted#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/awalsh128/vscode-keep-sorted"
  },
  "bugs": {
    "url": "https://github.com/awalsh128/vscode-keep-sorted/issues"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "mocha": {
    "spec": "out/test/**/*.test.js",
    "require": [
      "source-map-support/register"
    ]
  },
  "keywords": [
    "sort",
    "lines",
    "organize",
    "format",
    "code",
    "auto-sort",
    "keep-sorted"
  ],
  "categories": [
    "Formatters",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Keep Sorted",
      "properties": {
        "keep-sorted.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the keep-sorted extension"
        },
        "keep-sorted.fixOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fix documents when they are saved"
        },
        "keep-sorted.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Array of glob or regex patterns to exclude files from being processed by the extension (relative to the workspace root).",
          "examples": [
            "**/node_modules/**",
            "**/dist/**",
            "^tests/[^1-9]\\w+.*\\.js"
          ]
        }
      }
    }
  },
  "commands": [
    {
      "command": "keep-sorted.fixFile",
      "title": "Keep Sorted: Fix Current File"
    },
    {
      "command": "keep-sorted.fixWorkspace",
      "title": "Keep Sorted: Fix Entire Workspace"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm ci && npm run compile",
    "compile": "npm run clean && tsc -b --clean && tsc -b",
    "lint": "eslint",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:runner": "npm run compile && node ./out/test/runTest.js",
    "create-binaries": "tsx scripts/create-binaries.ts",
    "clean": "rimraf out/",
    "prebuild": "npm run clean",
    "refreshlock": "npm i --package-lock-only"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/source-map-support": "^0.5.10",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.0",
    "eslint": "^9.13.0",
    "mocha": "^11.7.4",
    "mocha-explorer-launcher-scripts": "^0.4.0",
    "prettier-plugin-jsdoc": "^1.3.3",
    "rimraf": "^6.1.0",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "chai-as-promised": "^8.0.2",
    "glob-regex": "^0.3.2",
    "limiter": "^3.0.0",
    "lru-cache": "^11.2.2"
  }
}
