{
  "name": "keep-sorted",
  "displayName": "Keep Sorted",
  "description": "A VS Code extension that wraps Google's keep-sorted tool for linting and auto-fixing sorted lines",
  "version": "0.0.1",
  "publisher": "awalsh128",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "keep-sorted.fix",
        "title": "Fix Keep-Sorted Issues",
        "category": "Keep Sorted"
      },
      {
        "command": "keep-sorted.lint",
        "title": "Lint Keep-Sorted",
        "category": "Keep Sorted"
      }
    ],
    "configuration": {
      "title": "Keep Sorted",
      "properties": {
        "keep-sorted.enableAutoFix": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic fixing of keep-sorted issues on save"
        },
        "keep-sorted.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic reporting for keep-sorted issues"
        },
        "keep-sorted.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Keep Sorted extension"
        },
        "keep-sorted.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run keep-sorted linting on file save"
        },
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run download-binary && npm run package",
    "download-binary": "ts-node scripts/download-binary.ts",
    "download-all-binaries": "ts-node scripts/download-binary.ts --all",
    "update-changelog": "ts-node scripts/update-changelog.ts",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p tsconfig.test.json --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jasmine": "^5.1.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "jasmine": "^5.12.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^2.24.0"
  }
}
